@model MoodLog.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "_AuthLayout";
}

<!-- Back to Home Link -->
<div class="text-center mb-3">
    <a href="@Url.Action("Index", "Home")" class="text-link-dark">
        <i class="fas fa-arrow-left me-1"></i>Back to Home
    </a>
</div>

<h2 class="text-center mb-4 text-primary-dark">Welcome Back</h2>
<p class="text-center text-secondary-dark mb-4">Sign in to continue tracking your mood</p>

<form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
    
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email address" autocomplete="username" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">
                Remember me on this device
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-auth">
        <i class="fas fa-sign-in-alt me-2"></i>SIGN IN
    </button>

    <div class="auth-links">
        <p class="mb-2 text-secondary-dark">Don't have an account?</p>
        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-link-dark">
            <i class="fas fa-user-plus me-1"></i>Create Account
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
