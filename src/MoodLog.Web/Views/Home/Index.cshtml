@{
    ViewData["Title"] = "MoodLog - Daily Mood Tracker";
    Layout = "_Layout";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <span class="mood-icon" id="animatedMoodIcon">😊</span>
                        MoodLog
                    </h1>
                    <h2 class="hero-subtitle">Track your emotions, understand your patterns</h2>
                    <p class="hero-description">
                        Simple daily mood tracking that helps you identify patterns,
                        build better habits, and take control of your emotional well-being.
                    </p>

                    <div class="hero-actions">
                        <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-hero">
                            <i class="fas fa-rocket me-2"></i>Get Started Free
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light btn-hero">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </a>
                    </div>

                    <div class="hero-stats">
                        <div class="stat">
                            <span class="stat-number">30s</span>
                            <span class="stat-label">Daily logging</span>
                        </div>
                        <div class="stat">
                            <span class="stat-number">100%</span>
                            <span class="stat-label">Private & secure</span>
                        </div>
                        <div class="stat">
                            <span class="stat-number">∞</span>
                            <span class="stat-label">Insights</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="hero-features">
                    <div class="feature-showcase">
                        <!-- Feature 1: Mood Tracking -->
                        <div class="feature-card feature-primary">
                            <div class="feature-icon">
                                <i class="fas fa-heart-pulse"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Track Your Mood</h4>
                                <p>Log daily emotions with our intuitive 10-point scale</p>
                            </div>
                            <div class="feature-visual">
                                <div class="mood-scale">
                                    <span class="scale-dot active"></span>
                                    <span class="scale-dot active"></span>
                                    <span class="scale-dot active"></span>
                                    <span class="scale-dot active"></span>
                                    <span class="scale-dot active"></span>
                                    <span class="scale-dot active"></span>
                                    <span class="scale-dot active"></span>
                                    <span class="scale-dot"></span>
                                    <span class="scale-dot"></span>
                                    <span class="scale-dot"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Feature 2: Analytics -->
                        <div class="feature-card feature-secondary">
                            <div class="feature-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Smart Analytics</h4>
                                <p>Discover patterns and trends in your emotional journey</p>
                            </div>
                            <div class="feature-visual">
                                <div class="mini-chart">
                                    <div class="chart-bar" style="height: 60%"></div>
                                    <div class="chart-bar" style="height: 80%"></div>
                                    <div class="chart-bar" style="height: 45%"></div>
                                    <div class="chart-bar" style="height: 90%"></div>
                                    <div class="chart-bar" style="height: 70%"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Feature 3: Insights -->
                        <div class="feature-card feature-accent">
                            <div class="feature-icon">
                                <i class="fas fa-lightbulb"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Personal Insights</h4>
                                <p>Get personalized recommendations for better wellness</p>
                            </div>
                            <div class="feature-visual">
                                <div class="insight-indicator">
                                    <div class="pulse-ring"></div>
                                    <div class="pulse-ring delay-1"></div>
                                    <div class="pulse-ring delay-2"></div>
                                    <span class="insight-icon">💡</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




<!-- Footer -->
<footer class="landing-footer">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="footer-brand">
                    <h5>😊 MoodLog</h5>
                    <p>Your journey to better emotional wellness starts here.</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="footer-links">
                    <div class="row">
                        <div class="col-6">
                            <h6>Product</h6>
                            <ul>
                                <li><a href="#features">Features</a></li>
                                <li><a href="#pricing">Pricing</a></li>
                                <li><a href="#security">Security</a></li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <h6>Legal</h6>
                            <ul>
                                <li><a href="#privacy">Privacy Policy</a></li>
                                <li><a href="#terms">Terms of Service</a></li>
