                        <i class="fas fa-chart-bar"></i>
                        Analytics
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("History", "MoodEntries")" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "History" ? "active" : "")">
                        <i class="fas fa-history"></i>
                        History
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("Settings", "Dashboard")" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")">
                        <i class="fas fa-cog"></i>
                        Settings
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("Index", "Seed")" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Seed" ? "active" : "")">
                        <i class="fas fa-database"></i>
                        Demo Data
                    </a>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <div class="nav-divider"></div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Admin")" class="nav-link admin-link">
                            <i class="fas fa-shield-alt"></i>
                            Admin Panel
                        </a>
                    </div>
                }
            </div>
            
            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="user-details">
                        <div class="user-name">@User.Identity?.Name</div>
                        <div class="user-email">@User.Identity?.Name</div>
                    </div>
                </div>



                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="nav-link w-100 text-start border-0 bg-transparent">
                        <i class="fas fa-sign-out-alt"></i>
                        Logout
                    </button>
                </form>
            </div>
        </nav>
        
        <!-- Main Content -->
        <main class="main-content">
            <!-- Mobile Header -->
            <div class="mobile-header d-md-none">
                <button class="mobile-menu-btn" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="h5 m-0">@ViewData["Title"]</h1>
                <div></div>
            </div>
            
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
        }

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const menuBtn = document.querySelector('.mobile-menu-btn');

            if (window.innerWidth <= 768 &&
                !sidebar.contains(event.target) &&
                !menuBtn.contains(event.target)) {
                sidebar.classList.remove('show');
            }
        });


    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
